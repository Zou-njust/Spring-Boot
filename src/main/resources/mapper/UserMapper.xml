<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="edu.njust.mapper.UserMapper">
    <select id="select" resultType="edu.njust.model.UserModel">
        select
            userid, username, userpw
        from user
    </select>

    <insert id="insert" parameterType="edu.njust.model.UserModel">
        insert into user
            (username, userpw)
        values
            (#{username,jdbcType=VARCHAR}, #{userpw,jdbcType=VARCHAR})
    </insert>

    <delete id="delete" parameterType="edu.njust.model.UserModel">
        delete from user
        where
            username = #{username,jdbcType=VARCHAR}
    </delete>

    <update id="update" parameterType="edu.njust.model.UserModel">
        update user
        set
            username = #{username,jdbcType=VARCHAR},
            userpw = #{userpw,jdbcType=VARCHAR}
        where
            username = #{username0,jdbcType=VARCHAR}
    </update>
</mapper>
